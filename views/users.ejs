<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bike Rental System</title>
    <link rel="stylesheet" type="text/css" href="/styles/users.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <header>
        <h3>Bike rental system</h3>
        <nav>
            <ul>
              <form action="/adminlandingpage"  method="post">
                <button type="submit" name="button" value="home">AdminHome</button>
                </form>
          
            </ul>
        </nav>
     </header>
     <div class="My-Div">
         <div class="order-div">
              <table  class="styled-table" style="width:70%">
                <tr>
                  <th>user_id</th>
                  <th>first_name</th>
                  <th>last_name</th>
                  <th>mobile_number</th>
                  <th>email</th>
                  <th>userName</th>
                  <th>Password</th>
                  <th>update</th>
                  <th>Delete</th>
                </tr>
                <% for(let item of items){ %>
                <tr>
                    <td><%= item.id%></td>
                    <td><%= item.first_name %></td>
                    <td><%= item.last_name %></td>
                    <td><%= item.mobile_no %></td>
                    <td><%= item.email %></td>
                    <td><%= item.user_name %></td>
                    <td><%= item.password %></td>
                    <td><form action="/updateUser" method="post">
                        <button type="submit" class="userUpdate"   name="user_name" value="<%=item.user_name%>">Update</button>
                    </form></td>
                    <td><form action="/deleteUser" method="post">
                        <button type="submit" class="userDelete" name="user_name" value="<%=item.user_name%>">Delete</button>
                    </form></td>
                </tr>
                <% } %>
              </table>
              <script>
                const form = document.getElementById("myForm");
                const usernameSpan = document.getElementById("username");
                const usernameInput = document.createElement("input");
          
                usernameInput.type = "hidden";
                usernameInput.name = "username";
                form.appendChild(usernameInput);
          
                // Listen for form submission
                form.addEventListener("submit", function (event) {
                  const username = usernameSpan.textContent;
                  usernameInput.value = username;
                });
          
          </script>
              </body>
              </html>
              
           </div>
    </div>
</div>
